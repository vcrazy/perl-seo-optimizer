{
    "settings": {
		"content": {
			"flash": {
				"use": false
			},
            "content": {
                "max_length": 100000
            },
			"title": {
				"max_length": 127,
				"keywords": {
					"bad": ["banner", "affiliate", "tralala", "devs"]
				}
			},
			"meta_tags": {
				"description": {
					"max_length": 255
				}
			},
			"urls": {
				"max_length": 150,
				"max_special_chars": 25,
				"max_slashes": 10
			},
			"tags": {
				"a": {
					"max_elements": 100
				},
				"h1": {
					"max_elements": 10
				},
				"img": {
					"max_elements": 100,
					"alt": {
						"use": true
					}
				}
			}
        }
    }
}