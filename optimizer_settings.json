{
    "settings": {
		"content": {
			"flash": {
				"use": false
			},
            "content": {
                "max_length": 100000
            },
			"title": {
				"max_length": 127
			},
			"meta_tags": {
				"keywords": {
					"bad": ["banner", "affiliate", "tralala"],
					"max_number": 50,
					"max_length": 255,
					"max_repeated_word": 3
				},
				"description": {
					"max_length": 255,
					"max_sentences": 10,
					"max_repeated_word": 3
				}
			},
			"urls": {
				"max_length": 2,
				"max_special_chars": 25,
				"max_slashes": 5
			},
			"tags": {
				"ul": {
					"required": true,
					"min_elements": 2
				},
				"a": {
					"max_elements": 100
				},
				"h1": {
					"required": true,
					"max_elements": 10
				},
				"h2": {
					"max_elements": 20
				},
				"h3": {
					"max_elements": 100
				},
				"img": {
					"max_elements": 100,
					"alt": {
						"required": true
					}
				}
			}
        }
    }
}